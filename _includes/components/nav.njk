<header class="py-3">
  <div class="row flex-nowrap justify-content-center align-items-center">
    <h1><a class="blog-header-logo text-dark" href="{{ '/' | url }}">Chander Pahar</a></h1>
  <div>
</header>
{% set navPages = collections.all | eleventyNavigation %}

<div class="nav-scroller py-1 mb-2">
    <nav class="nav d-flex justify-content-between">
    {%- for entry in navPages %}
      <a class="p-2 text-muted" href={{ entry.url | url }} {% if entry.url == page.url %} data-current="current item"{% endif %} >{{ entry.title }}</a>
      {%- endfor %}
    </nav>
  </div>

